      dv = "uxzar" //Branwen Death Variable (script name)
      override_BG1 = "uxzars" //Branwen SoA Override script
      override_SoD = "uxzars" //Branwen SoA Override script
      override_SoA = "uxzars" //Branwen SoA Override script
      override_ToB = "uxzar25s" //Branwen ToB Override script
      dialog_ToB = "uxzar25" //Branwen ToB dialogue file
      cre_ToB = "uxzar25" //Branwen ToB CRE filename
      traFile = EVAL "%MOD_FOLDER%/tra/%LANGUAGE%/fatesp.tra"
      string = "@0" //from the TRA file specified via traFile
      stringPosDV = "Cernd" //Branwen will be appended right above Cernd
      clean_ToB_DV = "Zariel" //death variable of BG1 Branwen (see clean_ToB comment)
  END
